<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/item_shap">

    <ImageView
        android:id="@+id/im_live"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bg_live"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/bg_number"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:background="@drawable/living_number_shap" />

    <View
        android:id="@+id/bg"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:background="@drawable/living_shap" />


    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_living"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="直播中"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <TextView
        android:id="@+id/number_pai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="200人竞拍"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:maxEms="10"
        android:text="测试车辆"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_live" />

    <ImageView
        android:id="@+id/im_header"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/bg_live"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxEms="10"
        android:text="测试名字"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/im_header"
        app:layout_constraintTop_toTopOf="@+id/im_header" />

    <ImageView
        android:id="@+id/im_like"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/im_header" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:maxEms="10"
        android:text="1000"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/im_like"
        app:layout_constraintTop_toTopOf="@+id/im_header"
        app:layout_constraintBottom_toBottomOf="@id/im_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>